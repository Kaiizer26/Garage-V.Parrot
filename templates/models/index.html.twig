{% extends 'base.html.twig' %}

{% block title %}Models index{% endblock %}

{% block body %}
    <h1>Models index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Mensualite</th>
                <th>Km</th>
                <th>Carburant</th>
                <th>Boite</th>
                <th>Annee</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for model in models %}
            <tr>
                <td>{{ model.id }}</td>
                <td>{{ model.Nom }}</td>
                <td>{{ model.prix }}</td>
                <td>{{ model.mensualite }}</td>
                <td>{{ model.km }}</td>
                <td>{{ model.carburant }}</td>
                <td>{{ model.boite }}</td>
                <td>{{ model.annee }}</td>
                <td>
                    <a href="{{ path('app_models_show', {'id': model.id}) }}">show</a>
                    <a href="{{ path('app_models_edit', {'id': model.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_models_new') }}">Create new</a>
{% endblock %}
