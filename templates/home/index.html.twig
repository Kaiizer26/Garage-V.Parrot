                    <article class="reviews-top-box">
                        <img src="{{ review.image }}" alt="Image de l'avis" class="modify">  <!-- Image -->
                        <div class="name-username">
                            <h3 class="modify">{{ review.name }}</h3> <!-- Nom de l'auteur -->
                            <p class="modify">@{{ review.username }}</p> <!-- Pseudo de l'auteur -->
