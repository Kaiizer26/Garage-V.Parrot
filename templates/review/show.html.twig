{% extends 'base.html.twig' %}

{% block title %}Review{% endblock %}

{% block body %}
    <h1>Review</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ review.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ review.name }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ review.username }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ review.image }}</td>
            </tr>
            <tr>
                <th>Stars</th>
                <td>{{ review.stars }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ review.comment }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_review_index') }}">back to list</a>

    <a href="{{ path('app_review_edit', {'id': review.id}) }}">edit</a>

